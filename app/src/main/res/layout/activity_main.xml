<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".MainActivity">

    <com.chinshry.base.view.CustomHeaderBar
        android:id="@id/custom_header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/app_name"
        app:show_back="false"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/custom_header_bar"
        android:layout_above="@+id/custom_tab"/>

    <com.chinshry.base.view.CustomTabView
        android:id="@+id/custom_tab"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false" />

</RelativeLayout>