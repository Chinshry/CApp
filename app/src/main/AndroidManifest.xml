<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chinshry.application">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTest"
        android:allowBackup="false">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyTest.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".scrollView.ScrollingActivity"
            android:label="@string/title_activity_scrollview"
            android:theme="@style/Theme.MyTest.NoActionBar" />
        <activity
            android:name=".TestActivity"
            android:theme="@style/Theme.MyTest.NoActionBar" />
        <activity
            android:name=".tabView.TabActivity"
            android:label="@string/title_activity_tabview"
            android:theme="@style/Theme.MyTest.NoActionBar" />
    </application>

</manifest>