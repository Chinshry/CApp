<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PictureSelectActivity">

    <com.chinshry.base.view.CustomHeaderBar
        android:id="@id/custom_header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="图片选择"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:divider="@drawable/divider_10"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@id/custom_header_bar" />

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitStart"
        android:src="@color/empty"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/ll_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>